<p style="color: green"><%= notice %></p>

<h1>Meetings</h1>

<%= month_calendar(events: @meetings) do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>
    <div>
      <%= link_to meeting.name, meeting %>
    </div>
  <% end %>
<% end %>

<% if Current.user.is_admin? %>
  <%= link_to "Create a New meeting", new_meeting_path %>
<% end %>