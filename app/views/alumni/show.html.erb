<p id="notice"><%= notice %></p>

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border: none; background-color: inherit">
          <div class="row g-0 bg-light card-glow" style="border-radius: 10px">
            <div class="col-md-5 gradient-custom text-center text-black pt-4 d-flex flex-column justify-content-center" style="border-radius: 10px 0px 0px 10px;">
              <%= link_to image_tag(@alumnus.image_as_thumbnail, class:"img-fluid my-5"), @alumnus.image if @alumnus.image.attached?%>
              <h1><%= @alumnus.user.first_name %> <%= @alumnus.user.last_name %></h1>

            </div>
            <div class="col-md-7 mt-4">
              <div class="card-body p-1">
                <h6><strong>Occupation</strong></h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Job Title</h6>
                    <p class="text-muted"><%= @alumnus.job_title%></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Job Category</h6>
                    <p class="text-muted"><%= @alumnus.job_category_name_if_present%></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Employer</h6>
                    <p class="text-muted"><%= @alumnus.employer%></p>
                  </div>
                </div>

                <h6><strong>Bio</strong></h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <p class="text-muted"><%= @alumnus.bio %></p>
                  </div>
                </div> 

                <h6><strong>Availability</strong></h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <p class="text-muted"><%= @alumnus.availability %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="hstack gap-3 mb-4">
          <%= link_to 'Edit', edit_alumnus_path(@alumnus), class: "btn btn-outline-primary" %> 
          <%= link_to 'Back', Current.previous_path, class: "btn btn-outline-dark" %>
        </div>

      </div>
    </div>
    
  </div>
</section>
