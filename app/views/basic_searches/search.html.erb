<h1><%= t("directory") %></h1>
<h3><%= t(".found") %> <%= @results.size %> <%= t(".matches") %> </h3>

<%= render 'form' %>

<table>
  <thead>
    <tr>
      <th><%= t(".first_name") %></th>
      <th><%= t(".last_name") %></th>
      <th><%= t(".major") %></th>
      <th><%= t(".graduation_year") %></th>
      <th><%= t(".job_category") %></th>
      <th><%= t(".job_title") %></th>
      <th><%= t(".employer") %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.major.name %></td>
        <td><%= user.graduation_year %></td>
        <td><%= user.alumnus.job_category_name_if_present %></td>
        <td><%= user.alumnus.job_title %></td>
        <td><%= user.alumnus.employer %></td>
        <td><%= link_to 'View', '/basic_searches/' + String(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
