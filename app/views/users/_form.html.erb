<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :email, placeholder: "Email" %>
  </div>

  <% if is_sign_up? %>
    <div class="field">
      <%= form.password_field :password, placeholder: "Password" %>
    </div>

    <div class="field">
      <%= form.password_field :password_confirmation, placeholder: "Password Confirmation" %>
    </div>
  <%end%>

  <% if is_sign_up? %>
    <div class="field">
      <!-- Changed role_id to role_name -->
      <%= form.select :role_id, Role.unprivileged.order(:name).map { |role| [role.name, role.id] }, include_blank: "Role Name", id: "id_of_the_role_id_select_box" %>
    </div>
  <%elsif Current.user.is_admin? && session[:user_id] != user.id%>
    <div class="field">
      <!-- Changed role_id to role_name -->
      <%= form.select :role_id, Role.order(:name).map { |role| [role.name, role.id] }, include_blank: "Role Name", id: "id_of_the_role_id_select_box" %>
    </div>
  <%else%>
    <div class="field">
      <!-- Changed role_id to role_name -->
      <%= form.select :role_id, Role.where(id: user.role).order(:name).map { |role| [role.name, role.id] }, include_blank: "Role Name", id: "id_of_the_role_id_select_box" %>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :first_name, placeholder: "First Name"%>
  </div>
  <div class="field">
    <%= form.text_field :last_name, placeholder: "Last Name" %>
  </div>

  <div class="field">
    <!-- Changed major_id to major_name -->
    <%= form.select :major_id, Major.order(:name).map { |major| [major.name, major.id] }, include_blank: "Major", id: "id_of_the_major_id_select_box" %>
  </div>

  <div class="field">
    <%= form.number_field :graduation_year, placeholder: "Graduation Year" %>
  </div>

  <div class="field">
    <%= form.text_field :phone, placeholder: "Phone" %>
  </div>

  <div class="actions">
    <%= form.submit "Update", class: "btn btn-outline-primary"%>
  </div>
<% end %>