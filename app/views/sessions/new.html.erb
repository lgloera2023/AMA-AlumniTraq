<main id="login-main">
    <div id="login-container">
        <%= form_with url: login_path do |form| %>
            <h1>Login</h1>

            <% if flash.alert %>
                <div>
                    <%= flash.alert %>
                </div>
            <% end %>

            <div>
                <%= form.label :email %>
                <% if @email %>
                    <%= form.text_field :email, value: @email %>
                <% else %>
                    <%= form.text_field :email %>
                <% end %>
            </div>

            <div>
                <%= form.label :password %>
                <%= form.password_field :password %>
            </div>

            <p>Don't have an account? <span id="signup-btn"><%= link_to "Sign Up", new_user_path %></span> </p>

            <div>
                <%= form.submit "Sign In" %>
            </div>
        <% end %>

        <%= button_to "Continue with Google", user_google_oauth2_omniauth_authorize_path, class: 'oauth-button' %>
        <%= button_to "Continue with Facebook", user_facebook_omniauth_authorize_path, class: 'oauth-button' %>
        <%= button_to "Continue with LinkedIn", user_linkedin_omniauth_authorize_path, class: 'oauth-button' %>
    </div>
</main>