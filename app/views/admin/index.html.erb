
<p id="notice"><%= notice %></p>

<h1>Admin</h1>
<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Major</th>
      <th>Graduation year</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.role.name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.major.name %></td>
        <td><%= user.graduation_year %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id)%></td>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if not user.is_approved %>
          <%= form_with model: user, url: "/admin/approve/", method: :post do |form| %>
            <td>
              <%= form.hidden_field :user_id, value: user.id %>
              <div class="actions">
                <%= form.submit "Approve"%>
              </div>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>